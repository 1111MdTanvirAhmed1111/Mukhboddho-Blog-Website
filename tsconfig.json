{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "ES2024",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "src/app/admin/components/RecentSales.js",
    "src/app/admin/components/TopPosts.js",
    "src/app/admin/components/UserEngagement.js",
    "src/app/admin/posts/page.js",
    "src/app/admin/settings/page.js",
    "src/app/admin/users/page.js",
    "src/components/CommentSection.js",
    "_next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
